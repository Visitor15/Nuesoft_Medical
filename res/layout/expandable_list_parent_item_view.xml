<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobile.nuesoft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:clickable="false"
    android:focusable="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dip"
        android:background="@drawable/btn_background_clickable_item"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/iv_icon"
            android:layout_width="12dip"
            android:layout_height="36dip"
            android:background="#0099CC" />

        <com.mobile.nuesoft.ui.NuesoftTextView
            android:id="@+id/nt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Patient&apos;s Name"
            android:textColor="#AA282828"
            android:textSize="18sp"
            custom:textStyle="fonts/Roboto-Bold.ttf" />
    </LinearLayout>

    <!-- <ImageView -->
