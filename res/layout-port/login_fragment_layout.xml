<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobile.nuesoft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/ll_menu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.mobile.nuesoft.ui.NuesoftTextView
                android:id="@+id/nt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_menu_container"
                android:layout_marginBottom="32dip"
                android:gravity="center"
                android:padding="12dip"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                custom:textStyle="fonts/Roboto-Thin.ttf" />

            <com.mobile.nuesoft.ui.NuesoftTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:background="@color/white"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:text="Username"
                android:textColor="#AA282828"
                custom:textStyle="fonts/Roboto-Bold.ttf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/white"
                android:padding="8dip" >

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:ems="10"
                    android:singleLine="true" />
            </RelativeLayout>

            <com.mobile.nuesoft.ui.NuesoftTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dip"
                android:background="@color/white"
                android:paddingLeft="8dip"
                android:paddingRight="8dip"
                android:text="Password"
                android:textColor="#AA282828"
                custom:textStyle="fonts/Roboto-Bold.ttf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:background="@color/off_white"
                android:padding="8dip" >

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dip"
                    android:ems="10"
                    android:inputType="textPassword" />
            </RelativeLayout>

            <com.mobile.nuesoft.ui.NuesoftTextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dip"
                android:background="@drawable/btn_background_clickable_transparent"
                android:padding="8dip"
                android:text="Register Account"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                custom:textStyle="fonts/Roboto-Thin.ttf" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="@color/off_white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_background_clickable_item"
            android:text="Cancel"
            android:textColor="#AA282828" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dip"
            android:background="#AA282828" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_background_clickable_item"
            android:text="Login"
            android:textColor="#AA282828" />
    </LinearLayout>

</LinearLayout>