<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobile.nuesoft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_background" >

    <LinearLayout
        android:id="@+id/ll_menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <com.mobile.nuesoft.ui.NuesoftTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:background="@color/white"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="Username"
            android:textColor="#AA282828"
            custom:textStyle="fonts/Roboto-Bold.ttf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@color/white"
            android:padding="8dip" >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:ems="10" />
        </RelativeLayout>

        <com.mobile.nuesoft.ui.NuesoftTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:background="@color/white"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="Password"
            android:textColor="#AA282828"
            custom:textStyle="fonts/Roboto-Bold.ttf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@color/white"
            android:padding="8dip" >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:ems="10"
                android:inputType="textPassword" />
        </RelativeLayout>

        <com.mobile.nuesoft.ui.NuesoftTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:background="@color/white"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="Password"
            android:textColor="#AA282828"
            custom:textStyle="fonts/Roboto-Bold.ttf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@color/white"
            android:padding="8dip" >

            <EditText
                android:id="@+id/et_pswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:ems="10"
                android:inputType="textPassword" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_background_clickable_item"
            android:text="Cancel"
            android:textColor="#AA282828" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dip"
            android:background="#AA282828" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_background_clickable_item"
            android:text="Next"
            android:textColor="#AA282828" />
    </LinearLayout>

    <com.mobile.nuesoft.ui.NuesoftTextView
        android:id="@+id/nt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_menu_container"
        android:layout_marginBottom="32dip"
        android:gravity="center"
        android:padding="12dip"
        android:text="User Registration"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        custom:textStyle="fonts/Roboto-Thin.ttf" />

</RelativeLayout>