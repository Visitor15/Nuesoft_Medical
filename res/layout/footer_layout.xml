<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobile.nuesoft"
    android:id="@+id/rl_footer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/footer_shadow"
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_above="@id/rl_footer_container"
        android:background="@drawable/footer_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/footer_height"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background_basic"
            android:clickable="true"
            android:padding="4dip"
            android:src="@drawable/ic_action_cancel" />

        <com.mobile.nuesoft.ui.NuesoftTextView
            android:id="@+id/nt_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FOOTER"
            android:textColor="#282828"
            android:textSize="18sp"
            custom:textStyle="fonts/Roboto-Regular.ttf" />

        <ImageView
            android:id="@+id/btn_send_now"
            android:layout_width="@dimen/footer_height"
            android:layout_height="match_parent"
            android:background="@drawable/btn_background_basic"
            android:clickable="true"
            android:padding="4dip"
            android:src="@drawable/ic_action_send_now" />
    </LinearLayout>

</LinearLayout>