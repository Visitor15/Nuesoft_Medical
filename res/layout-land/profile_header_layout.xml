<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.mobile.nuesoft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_ui_selectable_background"
    android:orientation="vertical" >

    <com.mobile.nuesoft.ui.NuesoftTextView
        android:id="@+id/nt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dip"
        android:text="Patient&apos;s Name"
        android:textColor="#AA282828"
        android:textSize="24sp"
        custom:textStyle="fonts/Roboto-Bold.ttf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <com.mobile.nuesoft.ui.ProfilePicImageView
            android:id="@+id/nt_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dip" />
    </RelativeLayout>

</LinearLayout>